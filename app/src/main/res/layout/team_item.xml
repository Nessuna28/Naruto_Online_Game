<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_teamName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:text="@string/teamName"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_dice1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_teamName"
                    app:srcCompat="@drawable/anko_face" />

                <ImageView
                    android:id="@+id/iv_dice6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_dice5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_dice5"
                    app:layout_constraintTop_toTopOf="@+id/iv_dice5"
                    app:srcCompat="@drawable/anko_face" />

                <ImageView
                    android:id="@+id/iv_dice5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_dice4"
                    app:layout_constraintStart_toEndOf="@+id/iv_dice4"
                    app:layout_constraintTop_toTopOf="@+id/iv_dice4"
                    app:srcCompat="@drawable/anko_face" />

                <ImageView
                    android:id="@+id/iv_dice4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_dice3"
                    app:layout_constraintStart_toEndOf="@+id/iv_dice3"
                    app:layout_constraintTop_toTopOf="@+id/iv_dice3"
                    app:srcCompat="@drawable/anko_face" />

                <ImageView
                    android:id="@+id/iv_dice3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_dice2"
                    app:layout_constraintStart_toEndOf="@+id/iv_dice2"
                    app:layout_constraintTop_toTopOf="@+id/iv_dice2"
                    app:srcCompat="@drawable/anko_face" />

                <ImageView
                    android:id="@+id/iv_dice2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_dice1"
                    app:layout_constraintStart_toEndOf="@+id/iv_dice1"
                    app:layout_constraintTop_toTopOf="@+id/iv_dice1"
                    app:srcCompat="@drawable/anko_face" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>