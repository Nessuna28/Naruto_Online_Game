<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeFragment">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv_titleGames"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_titleGames" />

        <TextView
            android:id="@+id/tv_titleGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/akaya_telivigala"
            android:text="@string/games"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_fight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/akaya_telivigala"
            android:text="@string/titleFight"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_fight"
            app:layout_constraintStart_toEndOf="@+id/iv_fight"
            app:layout_constraintTop_toTopOf="@+id/iv_fight" />

        <TextView
            android:id="@+id/tv_kniffel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/akaya_telivigala"
            android:text="@string/kniffel"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_kniffel"
            app:layout_constraintStart_toStartOf="@+id/tv_fight"
            app:layout_constraintTop_toTopOf="@+id/iv_kniffel" />

        <TextView
            android:id="@+id/tv_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/akaya_telivigala"
            android:text="@string/memory"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_memory"
            app:layout_constraintStart_toStartOf="@+id/tv_kniffel"
            app:layout_constraintTop_toTopOf="@+id/iv_memory" />

        <TextView
            android:id="@+id/tv_scissorsRockPaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/akaya_telivigala"
            android:text="@string/scissorsRockPaper"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_scissorsRockPaper"
            app:layout_constraintStart_toStartOf="@+id/tv_memory"
            app:layout_constraintTop_toTopOf="@+id/iv_scissorsRockPaper" />

        <ImageView
            android:id="@+id/iv_fight"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titleGames"
            app:srcCompat="@drawable/fight_image" />

        <ImageView
            android:id="@+id/iv_kniffel"
            android:layout_width="81dp"
            android:layout_height="71dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/iv_fight"
            app:layout_constraintTop_toBottomOf="@+id/iv_fight"
            app:srcCompat="@drawable/kniffel" />

        <ImageView
            android:id="@+id/iv_memory"
            android:layout_width="85dp"
            android:layout_height="77dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/iv_kniffel"
            app:layout_constraintTop_toBottomOf="@+id/iv_kniffel"
            app:srcCompat="@drawable/memory" />

        <ImageView
            android:id="@+id/iv_scissorsRockPaper"
            android:layout_width="66dp"
            android:layout_height="59dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/iv_memory"
            app:layout_constraintTop_toBottomOf="@+id/iv_memory"
            app:srcCompat="@drawable/scissors_rock_paper" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>